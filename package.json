{
  "dependencies": {
    "yo-yo": "1.4.0"
  },
  "scripts": {
    "build": "npm run build:js; npm run build:css",
    "build:js": "browserify -o main.build.js main.js",
    "build:css": "lessc --clean-css ./scss/main.less main.css",
    "watch": "npm run watch:js &! npm run watch:css",
    "watch:js": "watchify -o main.build.js main.js",
    "watch:css": "autoless ./scss/ ./"
  },
  "devDependencies": {
    "autoless": "^0.1.7",
    "browserify": "^14.0.0",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "watchify": "^3.9.0"
  }
}
